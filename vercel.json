{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "framework": "nextjs",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/api/cron/update-leaderboard",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/record-results",
      "schedule": "0 0 * * *"
    }
  ]
}
